<h1>Favorite Videos Games and Genres</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Age</th>
      <th>Background</th>
      <th>Game</th>
      <th>Genre</th>
      <th>Release Date</th>
      <th>Platform</th>
      <th>Developer</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.gender %></td>
        <td><%= person.age %></td>
        <td><%= person.background %></td>
        <td><%= person.game %></td>
        <td><%= person.genre %></td>
        <td><%= person.releasedate %></td>
        <td><%= person.platform %></td>
        <td><%= person.Developer %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

